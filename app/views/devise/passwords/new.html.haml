.card.text-center.mt-5.position-absolute.start-50.translate-middle{ style: 'top: 45%' }
  .card-body.mt-5
    %h2 Forgot your password?
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      -# = f.error_notification
      .form-inputs
        = f.input :email,                       |
          required: true,                       |
          autofocus: true,                      |
          input_html: { autocomplete: "email" } |
      .form-actions
        = f.button :submit, "Send me reset password instructions", class: "btn btn-outline-primary mb-3"
    = render "devise/shared/links"
